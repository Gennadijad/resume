{{!-- 
Це код container файлу для person сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/person"
--}}

<div>
    {{#with person}}
        <div>
            <h1>{{name}}</h1>
            <h3>Age: {{age}}</h3>
            <h3>Gender: {{gender}}</h3>

            <adress>
                {{#with address}}
                   <div>
                      <h3>Address: {{street}}, {{city}}, {{state}}, {{zip}}, {{country}}</h3>
                   </div>
                {{/with}}
            </adress>

            <hr>

        <section>
            {{> title data="Education" big=true}}
            <ul>
                {{#each education}}
                   <li> 
                       <h3> degree: {{degree}}</h3>
                    </li>
                   <li> 
                       <h3> major: {{major}}</h3>
                    </li>
                   <li> 
                       <h3> university: {{university}},  graduationYear - ({{graduationYear}})</h3>
                    </li>
                {{/each}}
            </ul>
        </section>
        <hr>
        <br>
        {{> title data=" WorkExperience" big=true}}
        <div>
            <ul>
                {{#each workExperience}}
                    <li>company: {{company}}</li>
                    <li>title: {{title}}</li>
                    <li>startDate: {{startDate}} endDate: {{endDate}}</li>
                    <li>responsibilities: {{responsibilities}}</li>
                    <li>year_founded: {{year_founded}}</li>
                    <li>industry: {{industry}}</li>
                    <br>
                    {{#each employees}}
                   <div>
                      <b>employees: {{name}}, {{position}}, {{department}}</b>
                        {{#each projects}}
                            <div>
                                <b>projects: {{name}}, {{description}}, {{status}}</b>
                                {{#each teams}}
                                    <div>
                                        <b>teams: {{team_name}}</b>
                                        {{#with team_leader}}
                                            <div>
                                                <b>team_leader: {{name}}, {{title}}, {{email}}</b>
                                            </div>
                                        {{/with}}
                                        {{#each team_members}}
                                           <div>
                                                <b>team_members: {{name}}, {{title}}, {{email}}</b>
                                                <b>skills: {{skills}}</b>
                                                {{#each projects}}
                                                    <div>
                                                        {{#each team_members}}
                                                            <div>
                                                                <b>team_members: {{name}}, {{title}}</b>
                                                            </div>
                                                        {{/each}}
                                                    </div>
                                               {{/each}}
                                            </div>
                                        {{/each}}
                                    </div>
                                {{/each}}   
                            </div>
                        {{/each}}
                   </div>
                    {{/each}}
                {{/each}}
            </ul>                 
        </div>
    {{/with}}
</div>
   